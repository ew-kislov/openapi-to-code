{
    "exclude": [
        "test",
        "node_modules",
        ".vscode"
    ],
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "lib": [
            "dom",
            "es6"
        ],
        "outDir": "dist",
        "declaration": true,
        "declarationMap": true,
        "removeComments": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "emitDecoratorMetadata": true
    },
    "include": ["src"]
}